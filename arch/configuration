    exec 1>${LOG_FILENAME}.out.log 2>${LOG_FILENAME}.err.log
fi


title() {
    printTitle "$@"
}

printTitle() {
    echo "$@" >&3
}

printOption() {
    echo "      * ${@}" >&3
}
