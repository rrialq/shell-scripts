LOG_FILENAME=${HOME}/arch-install.log

# Check if we are not in chroot
if [ "$(stat -c %d:%i /)" = "$(stat -c %d:%i /proc/1/root/.)" ]; then
    exec 3>&1
    exec &> ${LOG_FILENAME}
fi

title() {
    printTitle "$@"
}

printTitle() {
    echo "$@" >&3
}

printOption() {
    echo "      * ${@}" >&3
}
